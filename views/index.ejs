<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <table class="mt-5 w-50 m-auto table-dark table-striped table border border-2 border-secondary text-center ">
        <tr class="text-uppercase">
            <th>no</th>
            <th>name</th>
            <th>status</th>
            <th>edit</th>
            <th>remove</th>
        </tr>

        <%record.map((val)=>{%>
            <tr class="text-capitalize align-middle">
                <td>
                    <%= val.no %>
                </td>
                <td>
                    <%= val.name %>
                </td>
                <td>
                    <%= val.status %>
                </td>
                <td><button class="btn btn-light"><a href="/editdata?no=<%= val.no %>" class="text-decoration-none text-dark">Edit</a></button></td>
                <td><button class="btn btn-light"><a href="/deletedata?no=<%= val.no %>" class="text-decoration-none text-dark">Delete</a></button></td>
            </tr>
            <% })%>
    </table>
    <br><br>

    <form action="/addData">
        <div class="w-75 d-flex justify-content-end">
            <button type="submit" class="d-flex justify-content-end  btn btn-dark">ADD TASK</button>
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>

</body>

</html>